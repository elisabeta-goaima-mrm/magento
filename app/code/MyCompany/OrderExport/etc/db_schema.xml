<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="default" engine="innodb">
        <column xsi:type="smallint" name="export_status" padding="6" unsigned="false" nullable="false" default="0" comment="0=Pending, 1=Exported, 2=Processed"/>
    </table>
    <table name="sales_order_grid" resource="default" engine="innodb">
        <column xsi:type="smallint" name="export_status" padding="6" unsigned="false" nullable="false" default="0" comment="Export Status"/>
    </table>
</schema>
